<UserControl x:Class="download_manager.View.DownloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:download_manager.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0,20,0,20">
        <TextBlock Text="{Binding Path=URL}" Width="200" Height="20" HorizontalAlignment="Center" Margin="0,15,0,15" FontFamily="Arial Rounded MT Bold" TextAlignment="Center">
            
        </TextBlock>
        <TextBlock Text="{Binding Path=State}" Width="50" Height="20" HorizontalAlignment="Center" Margin="0,15,0,15">
            
        </TextBlock>
        <ProgressBar Value="{Binding Path=DownloadProgress}" Height="39" FlowDirection="LeftToRight" Foreground="#FF0086FC" BorderBrush="#FFC9FFFB" Background="#FFFAC1FF" Width="500" HorizontalAlignment="Center" Margin="0,20,0,20">
            
        </ProgressBar>
    </StackPanel>
</UserControl>
