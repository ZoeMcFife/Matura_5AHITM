<UserControl x:Class="Students.View.AddStudent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Students.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Add Student</TextBlock>
        <TextBox x:Name="StudentNameTextBox"></TextBox>
        <local:ClassComboBox x:Name="SelectedClass"></local:ClassComboBox>
        <Button x:Name="AddStudentButton" Click="AddNewStudent_Click">Add Student</Button>
    </StackPanel>
</UserControl>
