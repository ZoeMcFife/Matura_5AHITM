<UserControl x:Class="Students.View.ModifyStudent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Students.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <local:Student x:Name="Student"></local:Student>
        <local:ClassComboBox x:Name="SelectedClass" Selected="ChangeClass"></local:ClassComboBox>
    </StackPanel>
</UserControl>
