<UserControl x:Class="Students.View.ClassEditable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Students.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="Id"  Text="{Binding Path=ClassId}" Margin="4,0,0,0">
            
        </TextBlock>

        <TextBox Text="{Binding Path=ClassName}" Margin="9,0,0,0">

        </TextBox>
        <Button Click="DeleteClass_Click" Margin="10,0,0,0">Delete</Button>
    </StackPanel>
</UserControl>
